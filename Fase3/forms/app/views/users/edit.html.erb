<h1>Edit user</h1>

<%= render "shared/error_messages" %>

<%= form_for @user, url: {action: "update"} do |f| %>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field :username %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>